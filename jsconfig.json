{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
      "@/pages/*": ["src/pages/*"],
      "@/components/*": ["src/components/*"],
      "@/public/*": ["public/*"],
      "@/lib/*": ["src/lib/*"],
      "@/assets/*": ["src/assets/*"]
    }
  },
  "include": ["vite.config.ts", "src"]
}
